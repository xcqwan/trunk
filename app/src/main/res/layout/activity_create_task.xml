<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_topbar">
        <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:drawableLeft="@drawable/selector_btn_back"
                android:drawablePadding="10dp"
                android:text="新建任务"
                android:textColor="@color/selector_text_light"
                android:textSize="@dimen/text_medium"
                android:background="#00000000"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/transparent"
                android:text="保存"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/selector_red"/>
    </LinearLayout>

    <EditText
            android:id="@+id/et_wind_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:inputType="text"
            android:maxLength="10"
            android:singleLine="true"
            android:hint="请输入任务标题"
            android:textColorHint="@color/text_dark"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_xlarge"
            android:background="@color/transparent"/>
    <View
            style="@style/Divider_Horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/red"
            android:layout_height="2dp"/>
    <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="text"
            android:hint="详细内容什么..."
            android:textColor="@color/text_dark"
            android:singleLine="false"
            android:gravity="start"
            android:background="@color/transparent"/>
    <View
            style="@style/Divider_Horizontal"
            android:background="@color/divider_light"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="完成时间"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/text_dark"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/btn_calendar_pressed"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:text="14-10-18"
                android:textColor="@color/selector_text_dark"
                android:textSize="@dimen/text_medium"
                android:background="@color/transparent"/>
    </LinearLayout>
    <View
            style="@style/Divider_Horizontal"
            android:background="@color/divider_light"/>
    <Button
            android:id="@+id/btn_relation_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            android:drawableRight="@drawable/selector_btn_right_arrow"
            android:gravity="left"
            android:text="任务指派"
            android:textColor="@color/selector_text_dark"
            android:textSize="@dimen/text_medium"
            android:background="@color/transparent"/>
    <View
            style="@style/Divider_Horizontal"
            android:background="@color/divider_light"/>
</LinearLayout>