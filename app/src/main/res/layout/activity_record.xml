<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_topbar">
        <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:drawableLeft="@drawable/selector_btn_back"
                android:drawablePadding="10dp"
                android:text="新记录"
                android:textColor="@color/selector_text_light"
                android:textSize="@dimen/text_medium"
                android:background="#00000000"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/transparent"
                android:text="保存"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/selector_red"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:orientation="vertical">
        <EditText
                android:id="@+id/et_message"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:inputType="text"
                android:hint="写点什么..."
                android:textColor="@color/text_dark"
                android:singleLine="false"
                android:gravity="start"
                android:background="@color/transparent"/>
        <View
                style="@style/Divider_Horizontal"
                android:background="@color/divider_light"/>
        <Button
                android:id="@+id/btn_relation_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:drawableRight="@drawable/selector_btn_right_arrow"
                android:gravity="left"
                android:text="相关人员"
                android:textColor="@color/selector_text_dark"
                android:background="@color/white"/>
        <View
                style="@style/Divider_Horizontal"
                android:background="@color/divider_light"/>
        <Button
                android:id="@+id/btn_relation_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:drawableRight="@drawable/selector_btn_right_arrow"
                android:gravity="left"
                android:text="项目关联"
                android:textColor="@color/selector_text_dark"
                android:background="@color/white"/>
        <View
                style="@style/Divider_Horizontal"
                android:background="@color/divider_light"/>
        <VideoView
                android:id="@+id/vv_video"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"/>
        <GridView
                android:id="@+id/gv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:verticalSpacing="5dp"
                android:horizontalSpacing="5dp"
                android:numColumns="4"
                android:columnWidth="78dp"
                android:stretchMode="none"
                android:gravity="center"
                android:listSelector="#00000000"
                android:overScrollMode="never"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_location_blue"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="正在定位..."
                    android:textColor="@color/selector_text_dark"
                    android:textSize="@dimen/text_normal"/>
            <Button
                    android:id="@+id/btn_prefect_shop_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:drawableRight="@drawable/selector_btn_right_arrow"
                    android:drawablePadding="5dp"
                    android:text="补全店铺资料"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/selector_red"
                    android:background="@color/transparent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>