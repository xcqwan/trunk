<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_topbar">
        <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:drawableLeft="@drawable/selector_btn_back"
                android:drawablePadding="10dp"
                android:text="降级申请"
                android:textColor="@color/selector_text_light"
                android:textSize="@dimen/text_medium"
                android:background="#00000000"/>
    </LinearLayout>
    <View
            style="@style/Divider_Horizontal"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/list_background">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="风队长"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/red"/>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="方大员"
                        android:textColor="@color/text_light"
                        android:textSize="@dimen/text_medium"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="5dp"
                        android:text="13224242908"
                        android:textColor="@color/text_light"
                        android:textSize="@dimen/text_medium"/>
            </LinearLayout>
            <Button
                    android:id="@+id/btn_call_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:drawableLeft="@drawable/selector_btn_call_phone"
                    android:background="@color/transparent"/>
        </LinearLayout>
        <View
                style="@style/Divider_Horizontal"
                android:layout_marginLeft="20dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="降级申请"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_medium"/>
        <View
                style="@style/Divider_Horizontal"
                android:layout_marginLeft="20dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="申请日期"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_normal"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="11月11日"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_medium"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="15dp"
            android:text="判定申请"
            android:textColor="@color/selector_red"
            android:textSize="@dimen/text_medium"
            android:background="@drawable/selector_btn_border_red"/>
</LinearLayout>