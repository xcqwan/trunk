<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <SurfaceView
            android:id="@+id/sv_cemera"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"/>
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_alignParentTop="true">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <RelativeLayout
                    android:id="@+id/rl_top_1"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/background">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="1"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_xxlarge"/>
                <ImageView
                        android:id="@+id/iv_take_1"
                        style="@style/TakePhoto"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_top_2"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/list_background">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="2"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_xxlarge"/>
                <ImageView
                        android:id="@+id/iv_take_2"
                        style="@style/TakePhoto"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_top_3"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/background">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="3"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_xxlarge"/>
                <ImageView
                        android:id="@+id/iv_take_3"
                        style="@style/TakePhoto"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_top_4"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/list_background">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="4"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_xxlarge"/>
                <ImageView
                        android:id="@+id/iv_take_4"
                        style="@style/TakePhoto"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_top_5"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/background">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="5"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_xxlarge"/>
                <ImageView
                        android:id="@+id/iv_take_5"
                        style="@style/TakePhoto"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_top_6"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/list_background">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="6"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_xxlarge"/>
                <ImageView
                        android:id="@+id/iv_take_6"
                        style="@style/TakePhoto"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_top_7"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/background">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="7"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_xxlarge"/>
                <ImageView
                        android:id="@+id/iv_take_7"
                        style="@style/TakePhoto"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_top_8"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/list_background">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="8"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_xxlarge"/>
                <ImageView
                        android:id="@+id/iv_take_8"
                        style="@style/TakePhoto"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_top_9"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/background">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="9"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_xxlarge"/>
                <ImageView
                        android:id="@+id/iv_take_9"
                        style="@style/TakePhoto"/>
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_above="@+id/ll_bottom_bar"
            android:background="@color/list_background"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableLeft="@drawable/ic_location_blue"
                android:text="正在定位..."
                android:textSize="@dimen/text_normal"
                android:textColor="@color/text_dark"
                android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background">
        <LinearLayout
                android:id="@+id/ll_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_btn_cancel"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_take_photo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_takephoto"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_submit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_btn_submit"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>