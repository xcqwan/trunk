<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_topbar">
        <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:drawableLeft="@drawable/selector_btn_back"
                android:drawablePadding="10dp"
                android:text="补全店铺资料"
                android:textColor="@color/selector_text_light"
                android:textSize="@dimen/text_medium"
                android:background="#00000000"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="店铺名称"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_normal"/>
            <EditText
                    android:id="@+id/et_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:inputType="text"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:hint="请输入店铺名称"
                    android:textColorHint="@color/text_dark"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_xlarge"
                    android:background="@color/transparent"/>
            <View
                    style="@style/Divider_Horizontal"
                    android:background="@color/red"
                    android:layout_height="2dp"/>
            <EditText
                    android:id="@+id/et_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:hint="手机号(用于登录)"
                    android:background="@color/transparent"/>
            <View
                    style="@style/Divider_Horizontal"
                    android:background="@color/divider_light"/>
            <Button
                    android:id="@+id/btn_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/selector_btn_right"
                    android:drawablePadding="5dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:text="请选择省、市、区"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/selector_text_dark"
                    android:background="@color/transparent"/>
            <View
                    style="@style/Divider_Horizontal"
                    android:background="@color/divider_light"/>
            <EditText
                    android:id="@+id/et_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:hint="详细地址"
                    android:background="@color/transparent"/>
            <View
                    style="@style/Divider_Horizontal"
                    android:background="@color/divider_light"/>
            <EditText
                    android:id="@+id/et_shop_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:hint="店铺电话1(必填)"
                    android:background="@color/transparent"/>
            <View
                    style="@style/Divider_Horizontal"
                    android:background="@color/divider_light"/>
            <EditText
                    android:id="@+id/et_shop_subscriber_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:hint="店铺电话2(必填)"
                    android:background="@color/transparent"/>
            <View
                    style="@style/Divider_Horizontal"
                    android:background="@color/divider_light"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="是否有安卓"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_medium"/>
                <ToggleButton
                        android:id="@+id/tbtn_has_android"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/selector_btn_toggle"/>

            </LinearLayout>
            <View
                    style="@style/Divider_Horizontal"
                    android:background="@color/divider_light"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="找不到你的城市? 请致电"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_normal"/>
                <TextView
                        android:id="@+id/tv_call_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="400-0123-575"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_normal"/>
            </LinearLayout>

            <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="15dp"
                    android:text="注册商户信息"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_medium"
                    android:background="@drawable/selector_btn_red_grenadier_brown"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>