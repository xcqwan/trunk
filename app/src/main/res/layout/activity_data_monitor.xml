                                android:text="- -"
                                android:textSize="@dimen/text_large"
                                android:textColor="@color/text_light"/>
                    </LinearLayout>
                    <LinearLayout
                            android:id="@+id/ll_table_right_row_2"
                            style="@style/TableItem">
                        <TextView
                                android:id="@+id/tv_type_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="历史最高"
                                android:textSize="@dimen/text_normal"
                                android:textColor="@color/text_dark"/>
                        <TextView
                                android:id="@+id/tv_td_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- -"
                                android:textSize="@dimen/text_large"
                                android:textColor="@color/text_light"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                        style="@style/Divider_Horizontal"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <LinearLayout
                            style="@style/TableItem">
                        <TextView
                                android:id="@+id/tv_type_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="呼叫门店"
                                android:textSize="@dimen/text_normal"
                                android:textColor="@color/text_dark"/>
                        <TextView
                                android:id="@+id/tv_td_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- -"
                                android:textSize="@dimen/text_large"
                                android:textColor="@color/text_light"/>
                    </LinearLayout>
                    <LinearLayout
                            style="@style/TableItem">
                        <TextView
                                android:id="@+id/tv_type_7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="历史最高"
                                android:textSize="@dimen/text_normal"
                                android:textColor="@color/text_dark"/>
                        <TextView
                                android:id="@+id/tv_td_7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
