<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_topbar">
        <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:drawableLeft="@drawable/selector_btn_back"
                android:drawablePadding="10dp"
                android:text="申请判定"
                android:textColor="@color/selector_text_light"
                android:textSize="@dimen/text_medium"
                android:background="#00000000"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/transparent"
                android:text="保存"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/selector_red"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textSize="@dimen/text_xlarge"
                android:textColor="@color/text_dark"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/selector_btn_calendar_red"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:text="14-10-18"
                android:textColor="@color/selector_red"
                android:textSize="@dimen/text_medium"
                android:background="@color/transparent"/>
    </LinearLayout>
    <View
            style="@style/Divider_Horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/red"
            android:layout_height="2dp"/>
    <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="text"
            android:hint="写点什么..."
            android:textColor="@color/text_dark"
            android:singleLine="false"
            android:gravity="start"
            android:background="@color/transparent"/>
</LinearLayout>